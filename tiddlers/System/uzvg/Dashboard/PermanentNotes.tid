\procedure reset-btn()
\whitespace trim
<$button
	tooltip="Reset Sort"
	actions="""
	<$action-setfield
		$tiddler=<<stateTiddler>>
		progress=""
		rating=""
		visibility=""
		sort-filter="sort[]"/>
	""">
reset
</$button>
\end

<!-- PermanentNotes Filters:
* Progress
* Rating
* Visiblility
-->
